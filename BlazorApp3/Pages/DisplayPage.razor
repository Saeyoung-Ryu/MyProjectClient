<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Simple Website</title>
  <link rel="stylesheet" href="styles.css">
</head>
<body>

<header>
    <h1 class="TextStyle2">@HeaderText</h1>
</header>

<nav>
  <ul>
    <li><a href="SearchUser">SearchUser</a></li>
    <li><a href="DivideTeam">DivideTeam</a></li>
    <li><a href="MatchHistory">MatchHistory</a></li>
    <li><a href="Ranking">Ranking</a></li>
  </ul>
</nav>


</body>
</html>
@inject NavigationManager NavigationManager
@code {
  private string HeaderText { get; set; } = "DivideTeam";

  protected override void OnInitialized()
  {
    UpdateHeaderText();
  }

  private void UpdateHeaderText()
  {
    string currentUrl = NavigationManager.Uri;

    string[] stringArray = currentUrl.Split(new char[] {'/'});
    HeaderText = stringArray.Last();

    StateHasChanged();
  }
}
